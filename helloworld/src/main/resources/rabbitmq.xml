<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:rabbit="http://www.springframework.org/schema/rabbit"
    xsi:schemaLocation="http://www.springframework.org/schema/rabbit
           http://www.springframework.org/schema/rabbit/spring-rabbit.xsd
           http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- 1、Common config, rabbitmq server configuration -->
    <rabbit:connection-factory id="connectionFactory" host="119.147.176.188" port="5672"
        virtual-host="vh.finance" username="finance_user" password="finance_pwd" />

    <!-- 2、Producer configuration -->
    <rabbit:template id="amqpTemplate" connection-factory="connectionFactory" exchange="amq.topic"
        routing-key="route.hello.world" message-converter="jsonMessageConverter" />

    <bean id="jsonMessageConverter" class="org.springframework.amqp.support.converter.Jackson2JsonMessageConverter" />

    <!-- 3、 Consumer configuration -->
    <rabbit:listener-container connection-factory="connectionFactory">
        <rabbit:listener queue-names="queue.hello.world" ref="hellowMessageListener" />
    </rabbit:listener-container>

    <rabbit:queue name="queue.hello.world" />

    <bean id="hellowMessageListener" class="org.springframework.amqp.helloworld.async.annotation.HelloMessageListener" />
</beans>

